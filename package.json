{
  "name": "cpf-js",
  "version": "1.0.0",
  "description": "CPF site generated via JS",
  "main": "index.js",
  "scripts": {
    "build:bundleAndCopyHTML": "webpack",
    "build:copyAudio": "cp -r ./assets/audio ./dist/assets/audio",
    "build:copyDownloads": "cp -r ./assets/downloads ./dist/assets/downloads",
    "build:copyImages": "cp -r ./assets/images ./dist/assets/images",
    "build:copyRobots": "cp ./assets/robots.txt ./dist/",
    "build:cleanBuild": "rm -rf ./build/*",
    "build:cleanDist": "rm -rf ./dist/* && mkdir ./dist/assets",
    "build:prepareDist": "mkdir -p ./dist/assets && mkdir ./build",
    "build:renderTemplates": "node index.js",
    "build": "npm run build:prepareDist && npm run build:cleanDist && npm run build:cleanBuild && npm run build:renderTemplates && npm run build:copyImages && npm run build:copyAudio && npm run build:copyDownloads && npm run build:copyRobots && npm run build:bundleAndCopyHTML",
    "deploy": "npm run deploy:html && npm run deploy:assets && cd -",
    "deploy:assets": "aws s3 sync ./dist s3://chippanfire.com/ --delete --cache-control max-age=31536000",
    "deploy:html": "aws s3 sync ./dist s3://chippanfire.com/ --delete --exclude \"*\" --include \"*.html\" --cache-control max-age=86400",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "6.9.0",
    "css-loader": "^0.26.1",
    "ejs": "^2.5.5",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1"
  },
  "author": "https://github.com/crosslandwa",
  "license": "ISC"
}

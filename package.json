{
  "name": "cpf-js",
  "version": "1.0.0",
  "description": "CPF site generated via JS",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:build:copy-css && npm run build:build:transpile && npm run build:build:prepare-dist-dir && npm run build:build:render && npm run build:build:copy-images",
    "build:build:copy-css": "mkdir -p build && cp src/app.css build/app.css",
    "build:build:transpile": "babel ./src --out-dir build",
    "build:build:prepare-dist-dir": "rm -r dist && mkdir dist",
    "build:build:render": "cd build && node main.js && cd -",
    "build:build:copy-images": "find ./src -type f \\( -iname \\*.jpg -o -iname \\*.png -o -iname \\*.svg -o -iname \\*.ico \\) -exec cp {} ./dist \\;",
    "build:watch": "watch 'npm run build' ./src --interval 2",
    "deploy": "npm run deploy:html && npm run deploy:assets",
    "deploy:assets": "aws s3 sync ./dist s3://chippanfire.com/ --delete --cache-control max-age=31536000",
    "deploy:html": "aws s3 sync ./dist s3://chippanfire.com/ --delete --exclude \"*\" --include \"*.html\" --cache-control max-age=86400",
    "lint": "eslint ./src"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-standard": "^4.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "watch": "^1.0.2"
  },
  "author": "https://github.com/crosslandwa",
  "license": "ISC"
}

{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Creates infrastructure for chippanfire site",
  "Parameters": {},
  "Resources": {
    "SiteS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "BucketName": "chippanfire.com",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html",
          "ErrorDocument": "error.html"
        }
      }
    },
    "SiteS3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {"Ref": "SiteS3Bucket"},
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "PublicReadGetObject",
              "Effect": "Allow",
              "Principal": {
                "AWS": "arn:aws:iam::cloudfront:user/CloudFront Origin Access Identity E4R778N2IVJ8P"
              },
              "Action": "s3:GetObject",
              "Resource": [
                { "Fn::Join": [ "", [ "arn:aws:s3:::", {"Ref": "SiteS3Bucket"}, "/*" ] ] }
              ]
            }
          ]
        }
      }
    },
    "SiteS3Cloudfront": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "Aliases": ["chippanfire.com"],
          "CacheBehaviors": [],
          "Comment": "CDN for Chippanfire",
          "CustomErrorResponses": [],
          "DefaultCacheBehavior": {
            "AllowedMethods": [
              "GET",
              "HEAD"
            ],
            "CachedMethods": [
              "GET",
              "HEAD"
            ],
            "Compress": false,
            "DefaultTTL": 86400,
            "ForwardedValues": {
              "Cookies": {
                "Forward": "none"
              },
              "Headers": [],
              "QueryString": false
            },
            "MaxTTL": 31536000,
            "MinTTL": 0,
            "SmoothStreaming": false,
            "TargetOriginId": {"Ref": "SiteS3Bucket"},
            "TrustedSigners": [],
            "ViewerProtocolPolicy": "redirect-to-https"
          },
          "DefaultRootObject": "index.html",
          "Enabled": true,
          "Origins": [
            {
              "DomainName": {
                "Fn::GetAtt": [
                  "SiteS3Bucket",
                  "DomainName"
                ]
              },
              "Id": {"Ref": "SiteS3Bucket"},
              "S3OriginConfig": {
                "OriginAccessIdentity": "origin-access-identity/cloudfront/E4R778N2IVJ8P"
              }
            }
          ],
          "PriceClass": "PriceClass_100",
          "ViewerCertificate": {
            "IamCertificateId": "ASCAIT6SCYJ2D2WAHRXMY",
            "SslSupportMethod": "sni-only"
          }
        }
      }
    },
    "ChippanfireDeploymentEC2InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [ {
          "Ref": "ChippanfireDeploymentRole"
        } ]
      }
    },
    "ChippanfireDeploymentRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "ec2.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "chippanfire_deployment",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject",
                    "s3:PutObject",
                    "s3:PutObjectAcl",
                    "s3:DeleteObject",
                    "s3:ListMultipartUploadParts",
                    "s3:AbortMultipartUpload"
                  ],
                  "Resource" : [
                    { "Fn::Join" : ["", [ "arn:aws:s3:::", { "Ref" : "SiteS3Bucket" }, "/*" ]] }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": "s3:ListBucket",
                  "Resource": [
                    { "Fn::Join" : ["", [ "arn:aws:s3:::", { "Ref" : "SiteS3Bucket" } ]] }
                  ]
                },
                {
                  "Sid": "CertWangle",
                  "Effect": "Allow",
                  "Action": [
                    "iam:ListServerCertificates",
                    "iam:UploadServerCertificate",
                    "iam:DeleteServerCertificate"
                  ],
                  "Resource": [
                    "*"
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "ChippanfireHostedZone": {
      "Type": "AWS::Route53::HostedZone",
      "Properties": {
        "HostedZoneConfig": {
          "Comment" : "Hosted zone for chippanfire"
        },
        "Name": "chippanfire.com."
      }
    },
    "ChippanfireDNSName" : {
      "Type" : "AWS::Route53::RecordSetGroup",
      "Properties" : {
        "HostedZoneName" : "chippanfire.com.",
        "RecordSets" : [
          {
            "Name" : "chippanfire.com",
            "Type" : "A",
            "AliasTarget" : {
              "HostedZoneId": "Z2FDTNDATAQYW2",
              "DNSName": {"Fn::GetAtt" : [ "SiteS3Cloudfront", "DomainName"] }
            }
          },
          {
            "Name" : "www.chippanfire.com",
            "Type" : "A",
            "AliasTarget" : {
              "HostedZoneId": "Z2FDTNDATAQYW2",
              "DNSName": {"Fn::GetAtt" : [ "SiteS3Cloudfront", "DomainName"] }
            }
          }
        ]
      }
    }
  }
}

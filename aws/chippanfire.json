{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Creates infrastructure for chippanfire site",
  "Parameters": {},
  "Resources": {
    "SiteS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "BucketName": "chippanfire.com",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html",
          "ErrorDocument": "error.html"
        }
      }
    },
    "SiteS3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {"Ref": "SiteS3Bucket"},
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "2",
              "Effect": "Allow",
              "Principal": {
                "AWS": "arn:aws:iam::cloudfront:user/CloudFront Origin Access Identity E14A6V5RCDJX3Y"
              },
              "Action": "s3:GetObject",
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:s3:::",
                      {"Ref": "SiteS3Bucket"},
                      "/*"
                    ]
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "ChippanfireDeploymentEC2InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [ {
          "Ref": "ChippanfireDeploymentRole"
        } ]
      }
    },
    "ChippanfireDeploymentRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "ec2.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "chippanfire_deployment",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject",
                    "s3:PutObject",
                    "s3:PutObjectAcl",
                    "s3:DeleteObject",
                    "s3:ListMultipartUploadParts",
                    "s3:AbortMultipartUpload"
                  ],
                  "Resource" : [
                    { "Fn::Join" : ["", [ "arn:aws:s3:::", { "Ref" : "SiteS3Bucket" }, "/*" ]] }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": "s3:ListBucket",
                  "Resource": [
                    { "Fn::Join" : ["", [ "arn:aws:s3:::", { "Ref" : "SiteS3Bucket" } ]] }
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  }
}
<% const isThisPage = item => locals.content.title === item.title %>
<% const dropDownContainsThisPage = item => item.dropdown.map(d => d.title).includes(locals.content.title) %>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= homePageUrl %>">
        <img class="cpf-navbar-brand" src="<%= image('cpf_logo.png') %>" alt="ChipPanFire">
      </a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% items.forEach(item => { %>
        <% if (item.dropdown) { %>
        <li id="<%= `${item.title}-dropdown` %>" class="dropdown<%= (isThisPage(item) || dropDownContainsThisPage(item)) ? ' active' : '' %>">
          <a href="#" onclick="document.getElementById('<%= `${item.title}-dropdown` %>').classList.toggle('open')" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"><%= item.title %><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li<%- (locals.content.title === item.title) ? ' class="active"' : '' %>><a href="<%= item.href %>"><%= item.title %></a></li>
            <li role="separator" class="divider"></li>
            <% item.dropdown.forEach(dropItem => { %>
            <li<%- (locals.content.title === dropItem.title) ? ' class="active"' : '' %>>
              <% if (dropItem.external) { %>
              <%- include('external-link', {url: dropItem.href, text: dropItem.title}) %>
              <% } else { %>  
              <a href="<%= dropItem.href %>"><%= dropItem.title %></a>
              <% } %>
            </li>
            <% }) %>
          </ul>
        </li>
        <% } else { %>
        <li<%- isThisPage(item) ? ' class="active"' : '' %>><a href="<%= item.href %>"><%= item.title %></a></li>
        <% }}) %>
      </ul>
    </div>
  </div>
</nav>
